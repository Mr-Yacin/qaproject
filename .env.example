# Database Configuration
# PostgreSQL connection string for the main database
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=public
# Example with Neon: postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/qa_article_faq?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/qa_article_faq?schema=public"

# Test Database (optional - uses DATABASE_URL if not set)
# Separate database for running tests to avoid affecting production data
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/qa_article_faq_test?schema=public"

# Security Configuration
# INGEST_API_KEY: Static API key for authenticating webhook requests
# Generate a secure random string (e.g., using: openssl rand -base64 32)
INGEST_API_KEY="your-api-key-here"

# INGEST_WEBHOOK_SECRET: Secret key for HMAC-SHA256 signature verification
# Generate a secure random string (e.g., using: openssl rand -base64 32)
# This is used to verify the integrity and authenticity of webhook payloads
INGEST_WEBHOOK_SECRET="your-webhook-secret-here"

# API Configuration
# NEXT_PUBLIC_API_URL: Base URL for API calls (used in server-side rendering)
# In production, set this to your actual domain
NEXT_PUBLIC_API_URL="http://localhost:3000"

# NextAuth Configuration
# NEXTAUTH_SECRET: Secret key for NextAuth.js session encryption
# Generate a secure random string (e.g., using: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# NEXTAUTH_URL: The canonical URL of your site (used for callbacks)
# In production, set this to your actual domain
NEXTAUTH_URL="http://localhost:3000"

# Admin Authentication
# Credentials for the admin user to access the CMS dashboard
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-admin-password"
