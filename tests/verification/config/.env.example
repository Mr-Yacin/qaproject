# API Verification Test Configuration

# API Configuration
VERIFICATION_API_BASE_URL=http://localhost:3000
VERIFICATION_API_KEY=your_api_key_here
VERIFICATION_WEBHOOK_SECRET=your_webhook_secret_here
VERIFICATION_ADMIN_TOKEN=your_admin_token_here

# Database Configuration (optional)
VERIFICATION_DATABASE_URL=postgresql://user:password@localhost:5432/testdb

# Test Execution Configuration
VERIFICATION_TIMEOUT=30000
VERIFICATION_RETRIES=3
VERIFICATION_PARALLEL=true

# Performance Thresholds
VERIFICATION_MAX_RESPONSE_TIME=500
VERIFICATION_MIN_THROUGHPUT=100
VERIFICATION_MAX_ERROR_RATE=0.01
VERIFICATION_MAX_MEMORY_USAGE=512
VERIFICATION_MIN_CACHE_HIT_RATE=0.8

# Security Settings
VERIFICATION_ENABLE_REPLAY_TESTS=true
VERIFICATION_ENABLE_FUZZING_TESTS=false
VERIFICATION_MAX_TIMESTAMP_SKEW=300
VERIFICATION_ENABLE_VULN_SCANNING=false

# Reporting Configuration
VERIFICATION_GENERATE_DETAILED_REPORT=true
VERIFICATION_INCLUDE_PERF_GRAPHS=false
VERIFICATION_EXPORT_FORMATS=json,html
VERIFICATION_EMAIL_NOTIFICATIONS=false
VERIFICATION_EMAIL_RECIPIENTS=admin@example.com,dev@example.com
VERIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
VERIFICATION_CRITICAL_THRESHOLD=1

# Test Environment
VERIFICATION_ENVIRONMENT=development
VERIFICATION_TEST_DATA_PATH=./tests/verification/data